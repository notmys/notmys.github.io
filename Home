    <script>
        document.getElementById('landing').addEventListener('click', function() {
            this.style.display = 'none';
            document.getElementById('content').style.display = 'block';
            updTime();
            playAud();
        });
        
        function playAud() {
            try {
                const aud = new Audio('https://64.71.152.212/cdn/sitesong.wav');
                aud.volume = 0.7;
                aud.loop = true;
                aud.play().catch(e => console.error('Audio playback failed', e));
            } catch (e) {
                console.error('Audio error: ', e);
            }
        }
        
        function updTime() {
            const now = new Date();
            
            const h = now.getHours().toString().padStart(2, '0');
            const m = now.getMinutes().toString().padStart(2, '0');
            const s = now.getSeconds().toString().padStart(2, '0');
            const ts = `${h}:${m}:${s}`;
            
            const mo = (now.getMonth() + 1).toString().padStart(2, '0');
            const d = now.getDate().toString().padStart(2, '0');
            const y = now.getFullYear();
            const ds = `${mo}/${d}/${y}`;
            
            document.getElementById('current-time').textContent = `Current Time: ${ts}`;
            document.getElementById('current-date').textContent = `Current Date: ${ds}`;
            
            setTimeout(updTime, 1000);
        }
        
        function fixLinks() {
            const cont = document.querySelector('.paste-content');
            if (!cont) return;
            
            const regex = /(https?:\/\/[^\s]+)/g;
            cont.innerHTML = cont.innerHTML.replace(regex, url => {
                return '<a href="' + url + '" target="_blank">' + url + '</a>';
            });
        }
        
        document.addEventListener('DOMContentLoaded', function() {
            fixLinks(); // Ensure links are fixed when the page loads
        });
    </script>
